<UserControl x:Class="Sanatorium.Controls.RoomPopupContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sanatorium.Controls" xmlns:viewmodel="clr-namespace:Sanatorium.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:RoomsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <!-- Добавьте элементы управления для отображения изображения и описания номера -->
            <Image Source="{Binding Image}" Width="200" Height="150" Stretch="UniformToFill"/>
            <TextBlock Text="{Binding Description}" Margin="5" TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</UserControl>
